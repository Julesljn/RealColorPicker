{
    "manifest_version": 3,
    "name": "RealColorPicker",
    "version": "1.0",
    "description": "A color picker to capture colors from any website.",
    "permissions": ["scripting", "activeTab", "storage"],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "action": {
      "default_title": "RealColorPicker",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      },
      "default_popup": "popup/popup.html"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
  